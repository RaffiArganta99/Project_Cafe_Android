<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bayangan luar -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Sudut melengkung seperti CardView -->
            <solid android:color="#FFFFFF"/> <!-- Warna latar belakang -->
            <shadowColor android:color="#B0BEC5" /> <!-- Warna bayangan -->
            <stroke
                android:width="1dp"
                android:color="@color/white"/> <!-- Warna dan lebar garis tepi -->
        </shape>
    </item>


</layer-list>
