<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bayangan luar -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Sudut melengkung seperti CardView -->
            <solid android:color="#FFFFFF"/> <!-- Warna latar belakang -->
            <shadowColor android:color="#B0BEC5" /> <!-- Warna bayangan -->
            <stroke
                android:width="2dp"
                android:color="#9ED3D3D3"/> <!-- Warna dan lebar garis tepi -->
        </shape>
    </item>

    <!-- Garis tepi yang sedikit timbul -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/> <!-- Sudut melengkung -->
            <solid android:color="#FFFFFF"/> <!-- Warna latar belakang -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- Garis putih (untuk kesan tepi yang lebih tebal) -->
        </shape>
    </item>

</layer-list>
